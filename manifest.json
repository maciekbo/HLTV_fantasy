{
  "name": "HLTV Fantasy Extension",
  "description": "More data for your Fantasy game",
  "version": "0.1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "intro_popup.html",
    "default_icon": {
        "128":"icons/logo128.png",
        "48":"icons/logo48.png",
        "38":"icons/logo38.png",
        "19":"icons/logo19.png",
        "16":"icons/logo16.png"
    }
  },
  "content_scripts": [
    {
      "js": ["scripts/role_points_calc.js"],
      "matches": [
        "https://*.hltv.org/fantasy/*"
      ]
    }
  ]
}